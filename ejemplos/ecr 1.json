{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRLogin",
      "Effect": "Allow",
      "Action": "ecr:GetAuthorizationToken",
      "Resource": "*"
    },
    {
      "Sid": "ECRFullAccessToSpecificRepo",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:BatchGetImage",
        "ecr:GetDownloadUrlForLayer",
        "ecr:DescribeRepositories",
        "ecr:ListImages",
        "ecr:DescribeImages",
        "ecr:InitiateLayerUpload",
        "ecr:CreateRepository",
        "ecr:UploadLayerPart",
        "ecr:SetRepositoryPolicy",
        "ecr:GetRepositoryPolicy",
        "ecr:CompleteLayerUpload",
        "ecr:PutImage"
      ],
      "Resource": [
        "arn:aws:ecr:us-east-1:573066395874:repository/nadro-useast1-prod-account-statement-image",
        "arn:aws:ecr:us-east-1:573066395874:repository/nadro-useast1-prod-credit-limit-image",
        "arn:aws:ecr:us-east-1:573066395874:repository/nadro-useast1-prod-next-delivery-image"
      ]
    },
    {
      "Sid": "AllowListRepositories",
      "Effect": "Allow",
      "Action": "ecr:DescribeRepositories",
      "Resource": "*"
    }
  ]
}
