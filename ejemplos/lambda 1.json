{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateSpecificLambdas",
      "Effect": "Allow",
      "Action": [
        "lambda:CreateFunction"
      ],
      "Resource": [
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-account-statement-function",
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-credit-limit-function",
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-next-delivery-function"
      ]
    },
    {
      "Sid": "UpdateAndManageSpecificLambdas",
      "Effect": "Allow",
      "Action": [
        "lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration",
        "lambda:GetFunction",
        "lambda:GetFunctionConfiguration",
        "lambda:AddPermission"
      ],
      "Resource": [
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-account-statement-function",
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-credit-limit-function",
        "arn:aws:lambda:us-east-1:573066395874:function:nadro-useast1-prod-next-delivery-function"
      ]
    },
    {
      "Sid": "AttachExistingRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::573066395874:role/lambda_serverless_role"
    },
    {
      "Sid": "ListLambdaAndRoles",
      "Effect": "Allow",
      "Action": [
        "lambda:ListFunctions",
        "iam:ListRoles"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GetRole",
      "Effect": "Allow",
      "Action": [
        "iam:GetRole"
      ],
      "Resource": "arn:aws:iam::573066395874:role/lambda_serverless_role"
    }
  ]
}
